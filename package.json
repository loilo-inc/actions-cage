  },
  "devDependencies": {
    "@types/node": "^25",
    "@types/semver": "^7.5.8",
    "@vitest/coverage-v8": "^4.0.18",
    "prettier": "^3",
    "typescript": "^5",
    "vitest": "^4.0.16"
  }
